<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tag_ids, "Tags" %><br>
    <%#= f.hidden_field :tag_ids, value: nil %>
    <% @tags.each do |tag| %>
      <%= label_tag "tag_#{tag.id}", tag.description %>
      <%= check_box_tag 'post[tag_ids][]', tag.id, @post.tag_ids.include?(tag.id), id: "tag_#{tag.id}" %><br/>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :short_description %><br/>
    <%= f.text_area :short_description, size: '60x4' %>
  </div>

  <div class='field'>
    <%= f.label :title_image, 'Title Image' %>
    <br/>
    <%= f.file_field :title_image %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, size: '60x30' %>
  </div>
  <div class="field">
    <%= f.label :published %><br>
    <%= f.check_box :published %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
